<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="@drawable/hangman3"
    >

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="New Game"
        android:id="@+id/btnNewGame"
        android:textStyle="bold|italic"
        android:textSize="15dp"
        android:textColor="#e4ec12"
        android:ellipsize="middle"
        android:layout_marginTop="31dp"
        android:bottomLeftRadius="8dip"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:shadowColor="#ff7009" />

    <Button
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="Instructions"
        android:id="@+id/btnInstructions"
        android:textStyle="bold|italic"
        android:textSize="15dp"
        android:textColor="#f5f240"
        android:layout_alignTop="@+id/btnNewGame"
        android:layout_toRightOf="@+id/btnNewGame"
        android:shadowColor="#ff3413" />

    <Button
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Exit"
        android:id="@+id/btnExit"
        android:textStyle="bold|italic"
        android:textSize="15dp"
        android:textColor="#f8fa31"
        android:layout_alignTop="@+id/btnInstructions"
        android:layout_alignParentRight="true"
        android:shadowColor="#ff3910" />

</RelativeLayout>
