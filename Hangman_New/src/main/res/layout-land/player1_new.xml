<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111111">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="PLAYER 1"
        android:id="@+id/textView"
        android:layout_gravity="center"
        android:textSize="30dp"
        android:textColor="#e9ef37"
        android:shadowColor="#3e6773"
        android:textStyle="bold|italic"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ENTER A WORD :"
        android:id="@+id/txtWord"
        android:textSize="25dp"
        android:textColor="#fcac54"
        android:textStyle="bold|italic"
        android:password="false"
        android:singleLine="false"
        android:layout_below="@+id/textView"
        android:layout_toLeftOf="@+id/textView"
        android:layout_marginTop="33dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/EdittxtWord"
        android:hint="Enter the word here!!"
        android:textColor="#ffffff"
        android:maxLength="12"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_alignBottom="@+id/txtWord"
        android:layout_alignLeft="@+id/Edittxthint" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ENTER A HINT :"
        android:id="@+id/txthint"
        android:textSize="25dp"
        android:textColor="#fcac54"
        android:textStyle="bold|italic"
        android:password="false"
        android:singleLine="false"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/txtWord"
        android:layout_alignLeft="@+id/txtWord" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Edittxthint"
        android:hint="Enter the hint here!!"
        android:textColor="#fff1ff"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_alignBottom="@+id/txthint"
        android:layout_toRightOf="@+id/txtWord"
        android:layout_marginLeft="38dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play"
        android:id="@+id/btnPlay1"
        android:textStyle="bold|italic"
        android:textSize="20dp"
        android:textColor="#f1f32f"
        android:background="#100af3"
        android:layout_marginBottom="32dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/textView" />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:id="@+id/btnHome1"
        android:textStyle="bold|italic"
        android:textSize="20dp"
        android:textColor="#f1f32f"
        android:background="#100af3"
        android:layout_alignTop="@+id/btnPlay1"
        android:layout_toRightOf="@+id/textView" />

</RelativeLayout>